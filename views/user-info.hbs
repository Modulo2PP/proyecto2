<div class="container" id="edit-profile">
    <h1>Edit Profile</h1>
  	<hr>
        <form action="/userinfo" method="post" enctype="multipart/form-data" class="changeinfo">
      <!-- left column -->
        <div class="text-center">
          <img src={{user.picPath}} class="avatar img-circle" alt="avatar" style="margin-bottom: 10px">
          <input type="file" name= "file"class="form-control">
        </div>

      
      <!-- edit form column -->
      <div class="col-md-9 personal-info">
        <h3>Personal info</h3>



          <div class="form-group">
            <label class="col-lg-8 control-label">Email:</label>
            <div class="col-lg-10">
              <input class="form-control" name="email" type="text" value={{user.email}}>
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-8 control-label">Username:</label>
            <div class="col-md-10">
              <input class="form-control" name="username" type="text" value={{user.username}}>
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-8 control-label">Password:</label>
            <div class="col-md-10">
              <input class="form-control" name="password" type="password">
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-8 control-label">Confirm password:</label>
            <div class="col-md-10">
              <input class="form-control" name="passconfirm" type="password">
            </div>
          </div>
            <div class="col-md-10">
              <button class="btn btn-primary" value="Save Changes"> Save Changes</button>
              <span></span>
              <input type="reset" class="btn btn-default" value="Cancel">
            </div>
          </div>
        </form>
      </div>
  </div>
</div>
<hr>