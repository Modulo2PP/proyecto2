<div class="margin-top" id="album-pics">
    <div class="album-title margin-top">
        <input type="text" value='{{album.name}}' name="" class="album-name-input">
    </div>
    <p id="albumId" class=" d-none">{{album._id}}</p>
    <div class="flex-Photos">
        {{#each pictures}}

        <div class="pic-card non-flex">

            <div>
                <img src="{{path}}" alt="">
            </div>
                <button class="delete-pic-btn">
                    <i class="far fa-trash-alt"></i>

                </button>
                <div class="margin-left">
                    <button class="fav-btn eachPhoto-btn">
                        <i class="far fa-heart"></i>
                    </button>

                    <select class="choose-album eachPhoto-btn" name="select">
                        {{#each ../albums}}
                        <option value="{{_id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
        {{/each}}
    </div>
</div>